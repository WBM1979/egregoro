# Configurações principais da Egregoro

# Nome da instância principal da IA
EGREGORO_NOME=Egregoro

# Caminho (relativo ou absoluto) para o diretório onde os egos estão armazenados
EGOS_PATH=egos

# Idioma principal da IA (usar ISO-639-1, como 'pt' ou 'en')
IDIOMA=pt

# Define o modo debug (True para ativar logs e detalhes, False para modo produção)
DEBUG=True

# Token de segurança (futuramente usado para autenticar requisições)
API_TOKEN=egregoro_super_token

# Tempo limite em segundos para resposta de um ego
TIMEOUT_EGO=10

# Define se a Egregoro deve salvar logs de entrada/saída
LOG_ATIVO=True

# Caminho para o arquivo de aprendizados
ARQUIVO_APRENDIZADO=Aprendizados.json

# Configurações do servidor FastAPI
HOST=0.0.0.0
PORT=5050
