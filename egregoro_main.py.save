import os
import importlib
import time

EGOS_DIR = "egos"

def carregar_egos():
    egos = {}
    for filename in os.listdir(EGOS_DIR):
        if filename.endswith(".py") and filename != "__init__.py":
            ego_nome = filename[:-3]
            try:
                modulo = importlib.import_module(f"{EGOS_DIR}.{ego_nome}")
                if hasattr(modulo, "executar"):
                    egos[ego_nome] = modulo
                    print(f"[‚úî] Ego carregado: {ego_nome}")
                else:
                    print(f"[‚úò] Ego '{ego_nome}' n√£o tem fun√ß√£o 'executar'. Ignorado.")
            except Exception as e:
                print(f"[‚ö†] Erro ao carregar ego '{ego_nome}': {e}")
    return egos

def loop_egos(egos):
    while True:
        for nome, ego in egos.items():
            try:
                ego.executar()
            except Exception as e:
                print(f"[‚ö†] Erro ao executar ego '{nome}': {e}")
        time.sleep(5)  # intervalo entre execu√ß√µes

if __name__ == "__main__":
    egos = carregar_egos()
    print(f"\nTotal de egos carregados: {len(egos)}")
    print("Iniciando loop principal da Egregoro...\n")
    loop_egos(egos)
