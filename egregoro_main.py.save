import os
import importlib
import time

class Egregoro:
    def __init__(self, ego_folder='egos'):
        self.egos = {}
        self.ego_folder = ego_folder
        self.carregar_egos()

    def carregar_egos(self):
        for filename in os.listdir(self.ego_folder):
            if filename.endswith('.py') and filename != '__init__.py':
                ego_name = filename[:-3]
                module_path = f"{self.ego_folder}.{ego_name}"
                try:
                    module = importlib.import_module(module_path)
                    if hasattr(module, 'executar'):
                        self.egos[ego_name] = module
                        print(f"[‚úî] Ego '{ego_name}' carregado.")
                    else:
                        print(f"[!] Ego '{ego_name}' ignorado (sem fun√ß√£o 'executar').")
                except Exception as e:
                    print(f"[X] Erro ao carregar '{ego_name}': {e}")

    def ensinar(self, ego_nome, conhecimento):
        if ego_nome in self.egos:
            ego = self.egos[ego_nome]
            if hasattr(ego, 'ensinar'):
                return ego.ensinar(conhecimento)
            else:
                return f"Ego '{ego_nome}' n√£o implementa 'ensinar'"
        return f"Ego '{ego_nome}' n√£o encontrado"

    def executar(self, ego_nome, comando):
        if ego_nome in self.egos:
            ego = self.egos[ego_nome]
            return ego.executar(comando)
        return f"Ego '{ego_nome}' n√£o encontrado"

    def ver(self, ego_nome):
        if ego_nome in self.egos:
            ego = self.egos[ego_nome]
            if hasattr(ego, 'ver'):
                return ego.ver()
            else:
                return f"Ego '{ego_nome}' n√£o implementa 'ver'"
        return f"Ego '{ego_nome}' n√£o encontrado"

    def conversar(self, ego_nome, mensagem):
        if ego_nome in self.egos:
            ego = self.egos[ego_nome]
            if hasattr(ego, 'conversar'):
                return ego.conversar(mensagem)
            else:
                return f"Ego '{ego_nome}' n√£o implementa 'conversar'"
        return f"Ego '{ego_nome}' n√£o encontrado"

